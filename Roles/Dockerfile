FROM maven:3.8.1-openjdk-17-slim AS builder
WORKDIR ./
COPY pom.xml .
RUN mvn -e -B dependency:resolve
COPY src ./src
RUN mvn clean -DskipTests -e -B package

ARG DYNAMODB_ENDPOINT
ENV DYNAMODB_ENDPOINT=${DYNAMODB_ENDPOINT}

ARG DYNAMODB_REGION
ENV DYNAMODB_REGION=${DYNAMODB_REGION}

ARG DYNAMODB_ACCESS_KEY_ID
ENV DYNAMODB_ACCESS_KEY_ID=${DYNAMODB_ACCESS_KEY_ID}

ARG DYNAMODB_SECRET_KEY
ENV DYNAMODB_SECRET_KEY=${DYNAMODB_SECRET_KEY}

FROM openjdk:17-jdk-slim
VOLUME /tmp
COPY --from=builder /target/*.jar /Role-0.0.1-SNAPSHOT.jar
ENTRYPOINT ["java", "-jar", "/Role-0.0.1-SNAPSHOT.jar"]
EXPOSE 8080